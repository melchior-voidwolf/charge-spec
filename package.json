{
  "name": "charge-spec",
  "version": "1.0.0",
  "private": true,
  "description": "充电头规格网站 - Charging Adapter Specs Website",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@4.5.3",
  "scripts": {
    "dev": "yarn workspace @charge-spec/web dev",
    "build": "yarn workspace @charge-spec/web build",
    "build:fix": "yarn workspace @charge-spec/web build && node fix-basepath.js",
    "start": "yarn workspace @charge-spec/web start",
    "lint": "yarn workspaces foreach -p run lint",
    "type-check": "yarn workspaces foreach -p run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/cheerio": "^1.0.0",
    "axios": "^1.13.5",
    "cheerio": "^1.2.0",
    "eslint": "^9.18.0",
    "prettier": "^3.5.3",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=4.0.0"
  }
}
