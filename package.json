{
  "name": "charge-spec",
  "version": "1.0.0",
  "private": true,
  "description": "充电头规格网站 - Charging Adapter Specs Website",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "npm@10.0.0",
  "scripts": {
    "dev": "npm run dev --workspace=@charge-spec/web",
    "build": "npm run build --workspace=@charge-spec/web",
    "build:fix": "npm run build --workspace=@charge-spec/web && node fix-basepath.js && cp -r packages/web/out .",
    "start": "npm run start --workspace=@charge-spec/web",
    "lint": "npm run lint --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "devDependencies": {
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.5.3",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "tailwindcss": "^4.1.18"
  }
}
