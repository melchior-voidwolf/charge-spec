{
  "name": "charge-spec",
  "version": "1.0.0",
  "private": true,
  "description": "充电头规格网站 - Charging Adapter Specs Website",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@4.5.3",
  "scripts": {
    "dev": "yarn workspace @charge-spec/web dev",
    "build": "yarn workspace @charge-spec/web build",
    "build:fix": "yarn workspace @charge-spec/web build && node fix-basepath.js && cp -r packages/web/out .",
    "start": "yarn workspace @charge-spec/web start",
    "lint": "yarn workspaces foreach -Ap run lint",
    "type-check": "yarn workspaces foreach -Ap run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "devDependencies": {
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.5.3",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "tailwindcss": "^4.1.18"
  }
}
